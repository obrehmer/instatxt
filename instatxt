#!/usr/bin/env python3

from openai import OpenAI
import os

client = OpenAI(api_key = os.getenv("OPENAI_API_KEY"))


cam = input("Camera Model (Canon EOS 100):  ") or "Canon EOS 100"
obj = input("Objective (28-80 mm Zoom):  ") or "28-80 mm Zoom"
loc = input("Location: ")  
year = input("Year (2025): ") or "2025"
month = input("Month: ") 
add = input("Additions: ") 
fixtags = f"#film #kleinbild #35mm #analog #filmphotography"

ai_system_message = f"I need your help! You are a photographer and have posted a photo on Instagram. Write a text for an Instagram post in English, in simple language, in three sentences. The post should be written in a neutral and professional tone. Start with a sentence stating the location and date the picture was taken. Include 20 relevant hashtags and avoid the word “my”; use “a” or similar alternatives instead.always start with a sentence that includes the location and date the picture was taken. Start with location, year/month and end with camera model, lens. Write a total of 2000 characters."


ai_user_message = f"taken with {cam} with a lens {obj}, in {loc}, in the {month} of  {year},  {add}, add the hashtags {fixtags} "



completion = client.chat.completions.create(
    model="gpt-4o-mini",
    messages=[
        {"role": "system", "content": ai_system_message},
        {"role": "user", "content": ai_user_message}
    ]
)

answer = (completion.choices[0].message.content)

print("\n".join(["-" * 10, str(answer), "-" * 10]))

